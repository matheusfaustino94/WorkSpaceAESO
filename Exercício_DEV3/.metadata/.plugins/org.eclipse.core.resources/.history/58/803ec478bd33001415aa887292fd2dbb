import java.util.Scanner;


public class ex_04 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		
		Scanner teclado = new Scanner(System.in);
		System.out.println("Informe o número : ");
		int numero = teclado.nextInt();
		if(numero != 0){
			System.out.println("Informe o número : ");
			numero = teclado.nextInt();
		}
		
	}

}
