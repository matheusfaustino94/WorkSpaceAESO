package br.aeso.rodrigo.FilaDinamica;


public class Fila<T> {
	
	int qtd;
	int inicio;
	int fim;
	T [] fila;
	
	public Fila(int tamanho){
		this.fila = new Object[tamanho];
		this.qtd = 0;
		this.inicio = 0;
		this.fim = 0;
		
	}
	
	public boolean cheia(){
		return qtd==fila.length;
	}
	
	public boolean vazia(){
		return  qtd==0;
	}
	
	public void inserir(T objeto){
		if(!cheia()){
			fila[fim]=objeto;
			qtd++;
			fim++;
			if(fim>=fila.length){
				fim = fila.length - fim;
			}
		}else{
			System.out.println("A fila está cheia!");
			}
	}
	public Object remover(){
		Object objetoRemovido = null;
		if(!vazia()){
			objetoRemovido = fila[inicio];
			fila[inicio]=null;
			qtd--;
			inicio++;
			if(inicio>=fila.length){
				inicio = fila.length - inicio;
			}
		}else{
			System.out.println("A fila está vazia!");
			}
		return objetoRemovido;
	}
	
	
	public Object consultar() {
		return fila[inicio];
	}
	
}
